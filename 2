video-portfolio/sw.js
================================================================
const CACHE = 'portfolio-v1';

self.addEventListener('install', e => {
  e.waitUntil(
    caches.open(CACHE).then(cache =>
      cache.addAll([
        '/index.html',
        '/css/style.css',
        '/js/filter.js',
        '/js/slider.js',
        '/js/theme.js',
        '/assets/reel.mp4'
      ])
    )
  );
});

self.addEventListener('fetch', e => {
  e.respondWith(
    caches.match(e.request).then(resp => resp || fetch(e.request))
  );
});



