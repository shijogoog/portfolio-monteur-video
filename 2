/* 0. Variables */
:root{
  --clr-primary:#ff5d3a;
  --clr-dark:#181818;
  --clr-light:#fdfdfd;
  --font:'Poppins',sans-serif;
}
/* Dark mode overrides */
[data-theme="dark"]{
  --clr-primary:#ff7b57;
  --clr-dark:#fdfdfd;
  --clr-light:#181818;
  background:var(--clr-light);
  color:var(--clr-dark);
}

/* 1. Reset + body */
*,*::before,*::after{box-sizing:border-box;margin:0;padding:0}
body{font-family:var(--font);line-height:1.6;color:var(--clr-dark);background:var(--clr-light)}

/* 2. Helpers */
.section{padding:5rem 0}
.container{width:min(90%,1100px);margin:auto}
.btn{display:inline-block;padding:.9rem 1.6rem;border:2px solid var(--clr-primary);
     color:var(--clr-primary);text-decoration:none;border-radius:4px;transition:.3s}
.btn:hover{background:var(--clr-primary);color:white}
.btn--primary{background:var(--clr-primary);color:white;border:none}
.grid-2{display:grid;gap:2rem;align-items:center}
@media(min-width:768px){.grid-2{grid-template-columns:repeat(2,1fr)}}

/* 3. Hero */
.hero{position:relative;height:100vh;overflow:hidden}
.hero__bg{width:100%;height:100%;object-fit:cover}
.hero__overlay{position:absolute;inset:0;background:rgba(0,0,0,.45)}
.hero__content{position:absolute;inset:0;display:grid;place-content:center;text-align:center;color:white;gap:1.2rem}
.hero h1{font-size:clamp(2.5rem,7vw,4.5rem)}

/* 4. Portfolio grid */
.portfolio-grid{display:grid;gap:.75rem;grid-template-columns:repeat(auto-fill,minmax(260px,1fr))}
.card{position:relative;cursor:pointer}
.card img{width:100%;display:block;height:100%;object-fit:cover}
.card__overlay{position:absolute;inset:0;background:rgba(0,0,0,.5);color:white;display:grid;place-content:center;opacity:0;transition:.3s}
.card:hover .card__overlay{opacity:1}

/* 5. Filters */
.filters{display:flex;gap:.6rem;margin-bottom:1.2rem}
.filter-btn{background:none;color:inherit;border:1px solid currentColor;padding:.3rem .9rem;cursor:pointer}
.filter-btn.active,.filter-btn:hover{background:var(--clr-primary);color:white}

/* 6. Testimonials slider */
.slider{position:relative;overflow:hidden}
.slide{opacity:0;transition:.6s ease-in-out}
.slide.current{opacity:1}

/* 7. Services */
.services{list-style:none;display:grid;gap:.6rem}
.services li{display:flex;gap:.6rem;align-items:center}

/* 8. Contact */
form{display:grid;gap:1rem;max-width:500px;margin:auto}
